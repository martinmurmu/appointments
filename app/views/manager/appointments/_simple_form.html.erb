<%= form_for([:manager, @appointment], :html => {:class => "form-horizontal"}) do |f| %>
  <% if @appointment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@appointment.errors.count, "error") %> prohibited this appointment from being saved:</h2>

      <ul>
      <% @appointment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
      <div class="col-lg-3">
          <div class="input-group date">
              <input type="text" name="datetime" id="datetime" placeholder="Date"
                class="form-control" readonly="" size="16" value="<%= @appointment.get_datetime %>">
              <div class="input-group-btn">
                  <button type="button" class="btn btn-info date-set"><i class="fa fa-calendar"></i></button>
              </div>
          </div>
      </div>
      <div class="col-lg-6">
      <%= f.text_field :description, :class => "form-control", :placeholder => "Comments..." %>
      </div>
      <div class="col-lg-3">
      <%= f.submit "Broadcast Open Time Slot", :class => "btn btn-default" %>
    </div>
  </div>
<% end %>

