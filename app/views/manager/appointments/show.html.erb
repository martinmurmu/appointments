<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-lg-12">
    <section class="panel">
      <header class="panel-heading">
        Appointment 

        <% if (@appointment.status == 'open') %>
          <span class="label label-mini label-success">
        <% else %>
          <span class="label label-mini label-danger">
        <% end %>
          <%= @appointment.status %> 
        </span>
      </header>
      <form class="form-horizontal">
        <% if (@appointment.assigned_pin) %>
          <div class="form-group">
            <label class="col-lg-2 control-label">PIN</label>
            <div class="col-lg-10">
              <p class="form-control-static"><b>@appointment.assigned_pin</b></p>
            </div>
          </div>
        <% end %>
<!--         <div class="form-group">
          <label class="col-lg-2 control-label">Title</label>
          <div class="col-lg-10">
            <p class="form-control-static"><%= @appointment.title %></p>
          </div>
        </div>
 -->        
        <div class="form-group">
          <label class="col-lg-2 control-label">Date</label>
          <div class="col-lg-4">
            <p class="form-control-static"><%= @appointment.date %></p>
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-2 control-label">Time</label>
          <div class="col-lg-4">
            <p class="form-control-static">
                <%= @appointment.time.strftime("%I:%M%p") %>
            </p>
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-2 control-label">Comments</label>
          <div class="col-lg-10">
            <p class="form-control-static"><%= @appointment.description %></p>
          </div>
        </div>
        <div class="form-group">
          <div class="col-lg-offset-2 col-lg-10">
            <%= link_to 'Edit', edit_manager_appointment_path(@appointment), :class => "btn btn-default" %>
          </div>
        </div>
      </form>
    </section>
  </div>
</div>

<%= link_to 'Back', manager_appointments_path %>


