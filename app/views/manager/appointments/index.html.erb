<style type="text/css">

  .tachado {
    text-decoration: line-through;
  }

</style>

<div class="row">
  <div class="col-lg-12">
  	<section class="panel">
      <header class="panel-heading">
        Complete the form below to broadcast and fill an open slot
      </header>
      <div class="panel-body">
        <%= render 'simple_form' %>
      </div>
    </section>
    <div class="row">
      <% if (alert) %>
        <div class="col-lg-6 col-sm-6">        
          <div class="alert alert-block alert-danger fade in">
            <button type="button" class="close close-sm" data-dismiss="alert">
                <i class="fa fa-times"></i>
            </button>
            <%=raw alert %>
          </div>
        </div>
      <% end %>
      <% if (notice) %>
        <div class="col-lg-6 col-sm-6">        
          <div class="alert alert-success alert-fade-out fade in">
            <button data-dismiss="alert" class="close close-sm" type="button">
              <i class="fa fa-times"></i>
            </button>
            <%= notice %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <br />
  <div class="col-lg-12">
    <section class="panel">
    	<div class="row">
	      <div class="col-lg-5">
		      <header class="panel-heading">
		        Broadcasted Appointment Openings
		      </header>
	      </div>
	      <div class="col-lg-offset-4 col-lg-3">
	      	<!--<input type="text" class="form-control search" placeholder="Search">-->
	      	<%= form_tag "/manager/appointments", :method => 'get' do %>
			  <p>
			    <%= text_field_tag :search, "", :class => "form-control search" %>
			    <%= submit_tag "", :name => nil, :class => "search-submit" %>
			  </p>
			<% end %>
	      </div>
      	</div>
      <table class="table table-striped table-advance table-hover sorttable">
        <thead>
          <tr>
            <th width="15%"><%= sortable "date" %></th>
            <th width="15%"><%= sortable "time" %></th>
            <th width="15%"><%= sortable "assigned_pin" %></th>
            <th width="30%">Comments</th>
            <th width="18%"><%= sortable "status"%></th>
            <th>Edit</th>
          </tr>
        </thead>
        <tbody>
          <div class = "sort_paginate_ajax"><%= render 'appointments' %></div>
          <%= will_paginate @appointments %>
        </tbody>
      </table>
    </section>
  </div>
</div>

<script>

  $(window).load(function() {
    $("[data-toggle='popover']").popover({
      trigger: 'hover', 
      placement: 'bottom'
    });
  });
</script>