	            <section class="panel">
	                <div class="symbol blue">
	                    <i class="fa fa-user"></i>
	                </div>
	                <div class="value">
	                    <h1 class="count" id="waitlist-count"><%= @waitlists_all_count %></h1>
	                    <p>Current Waitlist</p>
	                </div>
	            </section>
	        </div>
	
	        <!-- Count patients that reply Y to text that then receive the appointment slot -->
