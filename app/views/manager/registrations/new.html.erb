<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form-signin"}) do |f| %>
  <h2 class="form-signin-heading">registration now</h2>
  <div class="login-wrap">
    <%= devise_error_messages! %>

    <p>Enter your personal details below</p>

    <input type="text" class="form-control" name="name" 
      placeholder="Manager Name" autofocus required />
    <input type="text" class="form-control" name="phone" 
      placeholder="Manager Phone" autofocus required />

    <p> Enter your account details below</p>

    <%= f.text_field :email, :class => "form-control", :placeholder => "Email", 
      :autofocus => true, :required => true %>

    <%= f.password_field :password, :class => "form-control", 
      :placeholder => "Password", :required => true %>

    <%= f.password_field :password_confirmation, :class => "form-control", 
      :placeholder => "Re-type Password", :required => true %>

    <label class="checkbox">
        <input type="checkbox" value="agree this condition" checked="checked" required /> 
        I agree to the Terms of Service and Privacy Policy
    </label>

    <div><%= f.submit "Sign up", :class => "btn btn-lg btn-login btn-block" %></div>

    <div class="registration">
      Already Registered.
      <%= link_to "Login", new_manager_session_path %>
    </div>

  </div>
<% end %>

