<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-lg-12">
    <section class="panel">
      <header class="panel-heading">
        Patient
      </header>
      <form class="form-horizontal">
        <div class="form-group">
          <label class="col-lg-2 control-label">Phone</label>
          <div class="col-lg-10">
            <p class="form-control-static"><%= @consumer.phone_number %></p>
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-2 control-label">Tags</label>
          <div class="col-lg-10">
            <p class="form-control-static">
              <%= @consumer.tags.where(:manager_id => current_manager.rolable.id).first.tags %>
            </p>
          </div>
        </div>
        <div class="form-group">
          <div class="col-lg-offset-2 col-lg-10">
            <%= link_to 'Edit', edit_manager_consumer_path(@consumer), :class => "btn btn-default" %>
          </div>
        </div>
      </form>
    </section>
  </div>
</div>

<%= link_to 'Back', manager_consumers_path %>

