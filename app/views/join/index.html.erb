<div class="main-content">
  <div class="row">
  	<div class="col-lg-4"></div>
  	<div class="col-lg-5">
  		<section class="panel">
              <header class="panel-heading">
                  Please join our Waitlist.
              </header>
              <div class="panel-body">
                  <form id="target" class="form-horizontal" role="form" action="" method="POST">
                      <div class="form-group">
                          <label for="name" class="col-lg-4 col-sm-4 control-label">Name:</label>
                          <div class="col-lg-7">
                              <input type="text" class="form-control" name="name" placeholder="Name">
                          </div>
                      </div>
                      <div class="form-group">
                          <label for="email" class="col-lg-4 col-sm-4 control-label">Email:</label>
                          <div class="col-lg-7">
                              <input type="email" class="form-control" name="email" placeholder="Email">
                          </div>
                      </div>
                      <div class="form-group">
                          <label for="org_name" class="col-lg-4 col-sm-4 control-label">Organization Name:</label>
                          <div class="col-lg-7">
                              <input type="text" class="form-control" name="org_name" placeholder="Organization Name">
                          </div>
                      </div>
                      <div class="form-group">
                          <label for="phone" class="col-lg-4 col-sm-4 control-label">Phone Number:</label>
                          <div class="col-lg-7">
                              <input type="text" class="form-control" name="phone" placeholder="Phone Number">
                          </div>
                      </div>
                      <div class="form-group">
                          <div class="col-lg-offset-4 col-lg-7">
                              <button type="submit" class="btn btn-danger">Submit</button>
                          </div>
                      </div>
                  </form>
              </div>
          </section>
	</div>
  </div>
  <script>
  	$( "#target" ).on('submit', function( event ) {
  		alert("submit");
  	  var name = $("[name='org_name']").val();
	  if (name === '') {
	  	return false;
	  }
	  this.action = "/" + name + "/join-waitlist";
	});
  </script>
</div>
