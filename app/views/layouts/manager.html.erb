<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <title>Manager's area</title>

  <%= stylesheet_link_tag    "manager", :media => "all" %>
  <%= javascript_include_tag "manager" %>
  <%= csrf_meta_tags %>
</head>

<body>

  <section id="container" class="">
    <!-- header start -->
    <header class="header white-bg">
      <!-- toggle navigation start -->
      <div class="sidebar-toggle-box">
          <div data-original-title="Toggle Navigation" data-placement="right" class="icon-reorder tooltips"></div>
      </div>
      <!-- logo start -->
      <a href="<%= manager_root_path %>" class="logo" >my<span>(waitlist)</span></a>
      <!-- notifications -->
      <div class="nav notify-row" id="top_menu"> </div>
      <!-- right nav bar -->
      <div class="top-nav ">
        <ul class="nav pull-right top-menu">
          <!-- user login dropdown start-->
          <% if manager_signed_in? %>
            <li class="dropdown">
              <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                <span class="username"><%= current_manager.email %></span>
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu extended logout">
                <div class="log-arrow-up"></div>
                <li><a href="<%= manager_profile_path %>"><i class=" icon-suitcase"></i>Profile</a></li>
                <li><a href="<%= edit_manager_registration_path %>"><i class="icon-cog"></i> Account</a></li>
                <li><a href="<%= destroy_manager_session_path %>"><i class="icon-key"></i> Log Out</a></li>
              </ul>
            </li>
          <% else %>
            <%= link_to "Sign Up", new_manager_registration_path %>
            <%= link_to "Login", new_manager_session_path %>
          <% end %>
        </ul>
      </div>
    </header><!-- header end -->

    <% flash.each do |name, msg| %>
      <% content_tag :div, msg, id: "flash_#{name}" %>
    <% end %>

    <% if manager_signed_in? %>
      <!--sidebar start-->
      <aside>
          <div id="sidebar"  class="nav-collapse ">
              <!-- sidebar menu start-->
              <ul class="sidebar-menu">
                  <li>
                      <a class="" href="<%= manager_root_path %>">
                          <i class="icon-dashboard"></i>
                          <span>Dashboard</span>
                      </a>
                  </li>
                  <li>
                  <li>
                      <a class="" href="<%= manager_consumers_path %>">
                          <i class="icon-user"></i>
                          <span>Consumers</span>
                      </a>
                  </li>
                  </li>
                  <li>
                  <li>
                      <a class="" href="<%= manager_appointments_path %>">
                          <i class="icon-dashboard"></i>
                          <span>Appointments</span>
                      </a>
                  </li>
                  </li>
              </ul>
              <!-- sidebar menu end-->
          </div>
      </aside>
      <!--sidebar end-->
    <% end %>

    <!--main content start-->
    <section id="main-content">
        <section class="wrapper">
            <!-- page start-->
            <%= yield %>
            <!-- page end-->
        </section>
    </section>
    <!--main content end-->
  </section>

</body>

</html>
