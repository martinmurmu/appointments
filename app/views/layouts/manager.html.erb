<!DOCTYPE html>
<html>
<head>
  <title>Manager area</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<body>

  <div id="container">
    <div id="user_nav">
      <%= link_to "Home", manager_root_path %>
      <% if manager_signed_in? %>
        Logged in as <strong><%= current_manager.email %></strong>
        <%= link_to "Edit profile", edit_manager_registration_path %>
        <%= link_to "Logout", destroy_manager_session_path, method: :delete %>
      <% else %>
        <%= link_to "Sign up", new_manager_registration_path %>
        <%= link_to "Login", new_manager_session_path %>
      <% end %>
    </div>

    <% flash.each do |name, msg| %>
      <% content_tag :div, msg, id: "flash_#{name}" %>
    <% end %>

    <%= yield %>
  </div>

</body>

</html>
