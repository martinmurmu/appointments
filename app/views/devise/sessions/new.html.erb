<div class="main-content">
  <div class="row">
  	<div class="col-lg-4"></div>
  	<div class="col-lg-4">
  		<div class="signin-form">
  			<img class="logo" src="/assets/img/mywaitlist.svg">
			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
			  <%= f.email_field :email, :autofocus => true, :class=>"form-control round-input email-input" %>
			  <%= f.password_field :password, :class=>"form-control round-input passwd-input" %>
			  
			  <div><%= f.submit "Login", :class=>"submit"%></div>
			  
			  <div class="link">
			  <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
				<%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
		      <% end -%>
		      </div>
			<% end %>			
		</div>
		<div class="link-form">
			<label>Interested?</label><br>
			<%= link_to "JOIN OUT WAITLIST", new_password_path(resource_name), :class=>"btn btn-round" %><br />
		</div>
	</div>
  </div>
</div>
